{
  "name": "webpack-ts-starter",
  "version": "0.2.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "serve": "webpack-dev-server --mode=development",
    "test": "ng test",
    "test:style": "stylelint \"src/**/*.scss\" --syntax=scss",
    "lint": "tslint ./src/tslint.json ./src/**/*.ts -t verbose --fix",
    "lint-staged": "lint-staged",
    "prettier": "npx prettier --write \"src/{app,environments,assets}/**/*{.ts,.js,.json,.html}\"",
    "codestyle": "npm run prettier && tslint -p tsconfig.json && stylelint --syntax=scss",
    "build": "webpack",
    "build:prod": "webpack --config webpack.config.prod.js"
  },
  "dependencies": {
    "normalize.css": "8.0.1"
  },
  "devDependencies": {
    "@types/node": "^12.12.30",
    "autoprefixer": "^9.7.4",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "4.2.5",
    "i": "0.3.6",
    "lint-staged": "10.2.7",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm": "6.14.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.1",
    "prettier-tslint": "0.4.2",
    "pretty-quick": "2.0.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "13.5.0",
    "stylelint-order": "4.0.0",
    "sugarss": "^2.0.0",
    "ts-loader": "^6.2.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-loader": "^3.6.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "tslint ./src/tslint.json -t verbose",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss --fix",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
